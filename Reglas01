rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ Permitir lectura de userCards a usuarios autenticados
    match /userCards/{documentId} {
      allow read: if request.auth != null;

      // ðŸ”¹ Permitir que cualquier usuario autenticado cree una tarjeta
      allow create: if request.auth != null;

      // ðŸ”¹ Permitir que solo el usuario dueÃ±o pueda modificar su propia tarjeta
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // ðŸ”¹ PERMISO CORREGIDO: Permitir que un conductor asigne la solicitud si aÃºn no hay assignedDriver
      allow update: if request.auth != null && (
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null) ||
        request.auth.uid == resource.data.assignedDriver
      );

      // ðŸ”¹ NUEVO: Permitir que un conductor actualice datos de userCards si estÃ¡ asignado
      allow update: if request.auth != null && request.auth.uid == request.resource.data.assignedDriver;
    }

    // ðŸ”¹ Permitir a los usuarios autenticados leer y modificar su propio perfil
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”¹ Permitir a los conductores autenticados leer su perfil y permitir a los usuarios ver la info de los conductores
    match /conductores/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == driverId;
    }

    // ðŸ”¹ Permitir que los conductores asignen una solicitud a sÃ­ mismos y luego modificarla
    match /requests/{requestId} {
      allow read: if request.auth != null;
      
      // ðŸ”¹ Permitir escritura si el usuario es el creador o el conductor asignado
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.assignedDriver || 

        // ðŸ”¹ Permitir que un conductor asigne la solicitud si aÃºn no hay conductor asignado
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null)
      );

      // ðŸ”¹ Permitir a los conductores modificar la solicitud si estÃ¡n asignados
      allow update: if request.auth != null && request.auth.uid == resource.data.assignedDriver;
    }
  }
}




